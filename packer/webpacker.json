{

	"variables" : {
		"aws_access_key": "",
		"aws_secret_key": ""
	},

	"builders": [{
		"type":"amazon-ebs",
		"access_key":"{{user `aws_access_key`}}",
		"secret_key": "{{user `aws_secret_key`}}",
		"region": "eu-west-2",

		"source_ami_filter": {
			"filters": {
				"virtualization-type": "hvm",
				"name": "*ubuntu-xenial-16.04-amd64-server-*",
				"root-device-type": "ebs"
				},
			"owners": ["099720109477"],
			"most_recent": true
		},
		"instance_type": "t2.micro",
		"ssh_username": "ubuntu",
		"ami_name": "inventory-web-test-{{timestamp}}"
	}],
	"provisioners": [
		{
			"type": "shell",
			"inline": ["mkdir /home/ubuntu/app"]
		},
		{
			"type": "file",
			"source": ".",
			"destination": "/home/ubuntu/app"

		},
		{
			"type": "chef-solo",
			"cookbook_paths": ["./cookbooks"],
			"run_list":["rails-server::default"]
		},
		{
			"type": "shell",
			"inline": ["cd /home/ubuntu/app","bundle install"]
		}

	]
}